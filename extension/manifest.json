{
  "manifest_version": 3,
  "name": "Gmail Declutter",
  "version": "1.0",
  "description": "Declutter your Gmail in seconds â€” unsubscribe and remove bulk emails effortlessly.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/ui/*", "content/assets/declutter-icon.png"],
      "matches": ["https://mail.google.com/*"]
    }
  ],
  "content_scripts": [
    {
      "js": ["content/content.js"],
      "matches": ["https://mail.google.com/*"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background/main.js",
    "type": "module"
  },
  "permissions": ["identity", "storage"],
  "oauth2": {
    "client_id": "396720193118-fggljh2amq0jlgq4v861vqn6rb88q9dt.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.modify"]
  }
}
