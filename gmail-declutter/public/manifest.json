{
  "manifest_version": 3,
  "name": "Gmail Declutter - Vite",
  "version": "1.0.0",
  "description": "Declutter your Gmail in seconds â€” unsubscribe and remove bulk emails effortlessly.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "identity",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_icon": "images/icon-32.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ],
      "type": "module"
    }
  ],
  "oauth2": {
    "client_id": "396720193118-15n5b7vqhid0ttcgbt5jr8qkgo2mvgq7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.modify"
    ]
  }
}